        function shareClick() {
            var rrShareParam = {
                resourceUrl : 'http://localhost:9292{{url}}',   //分享的资源Url
                srcUrl : 'http://xcoder.im',    //分享的资源来源Url,默认为header中的Referer,如果分享失败可以调整此值为resourceUrl试试
